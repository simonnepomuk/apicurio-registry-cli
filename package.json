{
  "name": "apicurio-cli",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "lint": "eslint",
    "format": "prettier --write .",
    "dev": "tsx src/index.ts",
    "build": "npm run generate:client && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
