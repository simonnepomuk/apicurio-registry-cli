{
  "name": "@simonnepomuk/apicurio-registry-cli",
  "description": "CLI to interact with the apicurio registry",
  "author": "simonnepomuk",
  "bin": {
    "apicurio": "bin/run.js"
  },
  "bugs": "https://github.com/simonnepomuk/apicurio-registry-cli/issues",
  "dependencies": {
    "@hey-api/client-fetch": "^0.2.4",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.53.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "mocha": "^10",
    "nock": "^14.0.0-beta.14",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/simonnepomuk/apicurio-registry-cli",
  "keywords": [
    "oclif",
    "apicurio",
    "registry",
    "cli",
    "api",
    "registry-cli",
    "apicurio-registry",
    "apicurio-registry-cli",
    "apicurio-cli"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "apicurio",
    "dirname": "apicurio",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "artifact": {
        "description": "Interact with the artifacts in the registry"
      }
    }
  },
  "repository": "simonnepomuk/apicurio-registry-cli",
  "scripts": {
    "build": "shx rm -rf dist && npm run generate:client && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "generate:client": "tsx scripts/download-apicurio-api-schema.ts && npx @hey-api/openapi-ts && tsx scripts/fix-client-imports.ts"
  },
  "types": "dist/index.d.ts"
}
